# Maintainer: Mark Wagie <mark dot wagie at tutanota dot com>
pkgname=oreo-cursors-mati
pkgver=1
pkgrel=1
pkgdesc="Color material cursors with cute animations."
arch=('any')
url="https://www.pling.com/p/1360254"
license=('GPL2')
makedepends=('git' 'ruby' 'gtk-engine-murrine' 'inkscape' 'libcanberra'
             'xorg-xcursorgen')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
options=('!strip')
groups=('mati')
source=('file:///home/harry/Downloads/oreo-cursor-mati.zip')
sha256sums=('6334912b8e397793566fa976191fa89c7e7d4486fc3e48fada402f70b499f6c8')
prepare() {
  cd "$srcdir/oreo-cursor-mati"
  make clean
}

build() {
    cd "$srcdir/oreo-cursor-mati"
  export NO_AT_BRIDGE=1

  pushd generator
  ruby convert.rb
  popd

  make build
}

package() {
  cd "$srcdir/oreo-cursor-mati"
  make DESTDIR="$pkgdir" install
}
