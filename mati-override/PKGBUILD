pkgname=mati-conflicts
pkgver=1.1
pkgrel=1
pkgdesc="MATE settings for Mati"
arch=('any')
groups=('mati')
license=('GPL')
source=('99_set-mati.sh'
        'set_mati.desktop'
        '99_mati-setup.gschema.override'
        'mati.layout')
sha256sums=('660ae2e9451c1e23ef85ba715723606e92466deb380b889a23a5c20687074e69'
            'e7f1e144b1761b689c4797f7839e71435358233070abba28a9be6ba8a126daba'
            '160a15bf199b765757480b7a9e3ea14bb036113fcb40a82386267f9ced72def9'
            '65ff5ef067ce69804afbff708e2956c64ed5bb83e4c03af577d85fea88013d3a')

package() {
    PREFIX=/etc/skel
    cd "$_pkgname"
    install -Dm755 "${srcdir}/99_set-mati.sh" "${pkgdir}${PREFIX}/99_set-mati.sh"
    install -Dm644 "${srcdir}/set_mati.desktop" "${pkgdir}${PREFIX}/.config/autostart/set_mati.desktop"
    install -Dm755 "${srcdir}/99_mati-setup.gschema.override" "${pkgdir}/usr/share/glib-2.0/schemas/99_mati-setup.gschema.override"
    install -Dm755 "${srcdir}/mati.layout" "${pkgdir}/usr/share/mate-panel/layouts/mati.layout"
}
