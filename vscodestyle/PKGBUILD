pkgname=vscodestyle
pkgver=1
pkgrel=1
pkgdesc='VS Code themes and basic extension for developer'
arch=('x86_64')
url='https://github.vom/BCW52'
depends=('code')
source=("file:///home/harry/project/bengal-build/vscodestyle/vscode-oss.zip"
        "vscodestyle")
sha256sums=('636529c1a8da76f9017439bb6fc3dccb6d52b6fc43b07e08b738ca80a8af0f7e'
            '6255cabc8bc40210f261995b98553276f604081ee3312c299a3b29604f7767b2')
package() {
cd $srcdir
install -dm755 "$pkgdir/usr/share/themes"
install -dm755 "$pkgdir/usr/local/bin/"
cp -r ./*  "$pkgdir/usr/share/themes"
cp vscodestyle "$pkgdir/usr/local/bin/vscodestyle"
}
